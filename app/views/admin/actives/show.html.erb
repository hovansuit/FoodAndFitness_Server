<div class="col-md-10">
  			<div class="content-box-large">
  				<div class="panel-body">
			  	    <div class="panel-body">
						<form action="/admin/actives/<%=@active.id%>" method="post" >
							<input type="hidden" name="_method" value="put"/>
							<fieldset>
								<div class="form-group">
									<label>Id</label>
									<span class="form-control"><%=@active.id%></span>
								</div>
                                <div class="form-group">
						            <label>Name</label>
									<input class="form-control" placeholder="Name" type="text" name="name" value="<%=@active.name%>">
								</div>
                                <div class="form-group">
						            <label>Detail</label>
									<input class="form-control" placeholder="Detail" type="text" name="detail" value="<%=@active.detail%>">
								</div>
								<div class="form-group">
						            <button class="btn btn-primary" type="submit" value="Save">Save</button>
								</div>
							</fieldset>
						    
						</form>
			  		</div>
                </div>
  			</div>
	</div>
</div>

			  			