<div class="col-md-10">
  			<div class="content-box-large">
  				<div class="panel-heading">
					<div class="panel-title">Responsive Tables</div>
				</div>
  				<div class="panel-body">
  					<div class="table-responsive">
  						<table class="table">
								<tr>
									<th>#</th>
									<th>Name</th>
									<th>Detail</th>
									<th></th>
									<th></th>
								</tr>
								<% id = 1 %>
								<% @goals.each { |goal| %>
								<tr>
									<td><%= id %></td>
									<td><%= goal.name %></td>
									<td><%= goal.detail %></td>
									<td><%= button_to 'Edit', "edit" , method: :get, params: { id: goal.id }, class: "btn btn-primary btn-xs" %></td>
    							<td><%= button_to 'Delete', "destroy" , method: :delete, params: { id: goal.id }, class: "btn btn-danger btn-xs" %></td>
								</tr>
								<% id += 1 %>
								<% } %>
							</table>
  					</div>
  				</div>
  			</div>
		  </div>
		</div>